<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorPrimaryDark"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/plato_imagen"
            android:layout_width="match_parent"
            android:layout_height="181dp"
            android:layout_weight="1"
            android:contentDescription="@string/lista_platos_imagen"
            app:srcCompat="@drawable/hamburguesa" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvPlatoNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/alta_plato_nombre"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvPlatoPrecio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/alta_plato_precio"
                android:textAlignment="textStart"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvdescripcionPlato"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/alta_plato_descripcion"
                android:textAllCaps="true"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>